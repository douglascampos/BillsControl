<div class="container-fluid">
  <h1 class="ls-title-intro ls-ico-dashboard">Contas mensais</h1>


  <p id="notice" class="ls-alert-info"><%= notice %></p>

  <table class="ls-table ls-table-striped">
    <thead>
      <tr>
        <th>Titulo</th>
        <th class="hidden-xs">Valor</th>
        <th>Ajuste</th>
        <th>Parcelas</th>
        <th>Saque</th>
        <th>Transf.</th>
        <th>Cartão</th>
        <th class="hidden-xs" colspan="2">Internet</th>
      </tr>
    </thead>
    <tbody>
        <% @bills.each do |bill| %>
        <tr>
          <td><%= bill.titulo %></td>
          <td class="hidden-xs"><%= format_value(bill.valor) %></td>
          <td><%= format_value(bill.ajuste) %></td>
          <td><%= bill.parcelas %></td>
          <td><%= bill.saque %></td>
          <td><%= bill.transferencia %></td>
          <td><%= bill.cartão %></td>
          <td><%= bill.internet %></td>
          <td><%= link_to 'Edit', edit_bill_path(bill), class: "ls-btn ls-ico-cog" %> </td>

        </tr>
      <% end %>
    </tbody>
  </table>

